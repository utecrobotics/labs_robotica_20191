<?xml version="1.0"?>

<launch>
  <!-- Launch Gazebo  -->
  <include file="$(find lab4)/launch/robot_gazebo.launch" />

  <!-- Joint controller configurations from YAML to parameter server -->
  <rosparam file="$(find lab4)/config/robot_control.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner"
        respawn="false" output="screen" ns="/robot"
        args="joint_state_controller
	      joint1_position_controller
	      joint2_position_controller"/>

  <!-- Convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher"
        type="robot_state_publisher"
	respawn="false" output="screen">
  </node>

</launch>
